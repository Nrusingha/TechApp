<%- include('header') %>
<div class="container">
  <div class="row">
    <div class="col-md-6"> <h2>Customer Details</h2> </div>
    <div class="col-md-6 text-right"> 
      <a href="/customer" class="btn btn-primary"> Add New </a>
    </div>
  </div>

  <div class="row">
    <table class="table table-striped table-primary">
      <thead>
        <tr>
          <th>FirstName</th>
          <th>LastName</th>
          <th>Mobile No</th>
          <th>Email</th>
          <th>DOB</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if(records.length >0){
            records.forEach(function(row){
            %>
        <tr>
          <td><%= row.FirstName %></td>
          <td><%= row.LastName %></td>
          <td><%= row.Mobile %></td>
          <td><%= row.Email %></td>
          <td><%= row.DOB %></td>

          <td><a class="btn btn-primary btn-xs" href="/customers/edit/<%= row._id %>"><i
                class="fa fa-edit"></i></a>
            <a class="btn btn-danger btn-xs" href="/customers/delete/<%= row._id %>"><i
                class="fa fa-trash"></i></a>
          </td>
        </tr>
        <%  }) } %>
      </tbody>
    </table>
  </div>
</div>
<%- include('footer') %>